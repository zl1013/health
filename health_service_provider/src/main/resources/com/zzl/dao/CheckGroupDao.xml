<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zzl.dao.CheckGroupDao">
    <!--插入检查组数据-->
    <insert id="add" parameterType="com.zzl.pojo.CheckGroup">
        <!--通过mybatis框架提供的selectKey标签获得自增产生的ID值-->
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>
        insert into t_checkgroup(code,name,helpCode,sex,remark,attention)
                      values
        (#{code},#{name},#{helpCode},#{sex},#{remark},#{attention})
    </insert>

    <!--设置检查组和检查项多对多关系-->
    <insert id="setCheckGroupAndCheckItem" parameterType="map">
        insert into t_checkgroup_checkitem(checkgroup_id,checkitem_id)
        values
        (#{checkGroupId},#{checkitemsId});
    </insert>

    <!--根据条件查询-->
    <select id="findByCondition" resultType="com.zzl.pojo.CheckGroup">
        select * from t_checkgroup
        <if test="value != null and value != '' and value.length >0">
            where code = #{value} or name = #{value} or helpCode =#{value}
        </if>
    </select>

    <!--根据ID查询-->
    <select id="findById" resultType="com.zzl.pojo.CheckGroup">
        select * from t_checkgroup where id = #{id};
    </select>

    <!--根据检查组ID查询关联的多个检查项ID，查询中间关系表-->
    <select id="findCheckItemIdsByCheckGroupId" resultType="int">
        select checkitem_id from t_checkgroup_checkitem where checkgroup_id = #{id};
    </select>

    <!--根据ID动态修改检查组相关字段-->
    <update id="edit" parameterType="com.zzl.pojo.CheckGroup">
        update t_checkgroup
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="helpCode != null">
                helpCode = #{helpCode},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteAssoication">
        delete from t_checkgroup_checkitem where checkgroup_id = #{id}
    </delete>

    <!--查询所有检查组信息-->
    <select id="findAll" resultType="com.zzl.pojo.CheckGroup">
        select * from t_checkgroup;
    </select>


    <resultMap type="com.zzl.pojo.CheckGroup" id="baseResultMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="helpCode" property="helpCode"/>
        <result column="sex" property="sex"/>
        <result column="remark" property="remark"/>
        <result column="attention" property="attention"/>
    </resultMap>
    <resultMap type="com.zzl.pojo.CheckGroup"
               id="findByIdResultMap"
               extends="baseResultMap">
        <collection property="checkItems"
                    javaType="ArrayList"
                    ofType="com.zzl.pojo.CheckItem"
                    column="id"
                    select="com.zzl.dao.CheckItemDao.findCheckItemById">
        </collection>
    </resultMap>
    <!--根据套餐id查询检查项信息-->
    <select id="findCheckGroupById" resultMap="findByIdResultMap">
  select * from t_checkgroup
    where id
    in (select checkgroup_id from t_setmeal_checkgroup where setmeal_id=#{id})
</select>


</mapper>